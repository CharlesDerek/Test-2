<% include ./partials/header %>
      <div class="container">
        <div class="jumbotron">
                <div class="container">
                    <h1>Hey <%=user.username %>!</h1>
                </div>
        </div>
    </div>
    
    
<div class="container">
    <div>
        <h1 class="h1main">Edit Your user Profile Here</h1>
    </div>
    <div class="row">
        <div class="submitform">
            <form action="/users/<%=user._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="username">username</label>
                    <input class="form-control" type="text" name="username" value="<%= user.username %>">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input class="form-control" type="password" name="password" value="<%= user.password %>">
                </div>
                <div class="form-group">
                    <label for="firstName">First Name</label>
                    <input class="form-control" type="text" name="firstName" value="<%= user.firstName %>">
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name</label>
                    <input class="form-control" type="text" name="lastName" value="<%= user.lastName %>">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input class="form-control" type="email" name="email" value="<%= user.email %>">
                </div>
                <div class="form-group">
                    <label for="avatar">Profile Image Avatar</label>
                    <input class="form-control" type="text" name="avatar" value="<%= user.avatar %>">
                </div>
                <div class="form-group">
                    <label for="avatartwo">Profile Image 2 (optional)</label>
                    <input class="form-control" type="text" name="avatartwo" value="<%= user.avatartwo %>">
                </div>
                <div class="form-group">
                    <label for="avatarthree">Profile Image 3 (optional)</label>
                    <input class="form-control" type="text" name="avatarthree" value="<%= user.avatarthree %>">
                </div>
                <div class="form-group">
                    <label for="avatarfour">Profile Image 4 (optional)</label>
                    <input class="form-control" type="text" name="avatarfour" value="<%= user.avatarfour %>">
                </div>
                <div class="form-group">
                    <label for="avatarfive">Profile Image 5 (optional)</label>
                    <input class="form-control" type="text" name="avatarfive" value="<%= user.avatarfive %>">
                </div>
                <div class="form-group">
                    <label for="bio">Bio</label>
			        <textarea class="form-control" type="text" name="bio" rows="5" value="<%= user.bio %>"></textarea>
		        </div>
		        <div class="form-group">
                    <input class="form-control" type="text" name="adminCode" placeholder="admin code" value="<%= user.isAdmin %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-danger btn-block">Update Profile!</button>
                </div>
            </form>
            <div>
                <button style="margin-top: 2%;" class="btn btn-xs btn-success" onclick="goBack()">Go Back</button>
            </div>
        </div>
    </div>
    </div>

<% include ./partials/footer %>
